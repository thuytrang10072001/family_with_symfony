{% extends 'base.html.twig' %}

{% block title %}Customer Details{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 5rem;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Customer Details</h1>
            <a href="{{ path('customer_index') }}" class="btn btn-success">Back to List</a>
        </div>

        <table class="table">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ customer.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ customer.name }}</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>{{ customer.email }}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ customer.size }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    {# {{ include('customer/_delete_form.html.twig') }} #}
{% endblock %}
